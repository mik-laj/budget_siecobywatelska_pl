{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
    .graph-wrapper {
        position: relative;
        width: 100%;
        height: 0;
    }
    .graph {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
    }
    .contract-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    @media(min-width: 600px){
        .contract-list {
            -webkit-column-count: 2;
            -moz-column-count: 2;
            column-count: 2;
            list-style: none;
            padding: 0;
            margin: 0;
            -webkit-column-gap: 40px;
            -moz-column-gap: 40px;
            column-gap: 40px;
        }
    }

    .contract-list li {
        -webkit-column-break-inside: avoid;
        break-inside: avoid-column;
        page-break-inside: avoid;
        column-break-inside: avoid;
    }

    .contract {
        position: relative;
        background: #F0F0F0;
        padding: 30px;
        margin-bottom: 40px;
    }
    .contract:after {
        position: absolute;
        top: 0;
        right: 0;
        content: '';
        display: block;
        border: 25px solid white;
        border-left-color: #808080;
        border-bottom-color: #808080;
    }

    </style>
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('budget_index') }}">Budget</a></li>
        <li class="active">{{ category }}</li>
    </ol>

    <h1 class="page-title">Bud≈ºet</h1>
    <h2 id="heading"></h2>
    <div id="breadcrumbs"></div>
    <div id="graph"></div>

    <div id="contracts">
        <div id="contract-list"></div>
        <div id="contract-pagination"></div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.17/d3.js"></script>
    <script type="text/javascript" src="/bundles/sowpbudget/graph.js"></script>
    <script type="text/javascript">
        var graph = new BudgetGraph(
                document.querySelector('#heading'),
                document.querySelector('#breadcrumbs'),
                document.querySelector('#graph'),
                document.querySelector('#contract-list'),
                document.querySelector('#contract-pagination')
        );
        graph.init();
        graph.setRootCategory({{ category.id }});
    </script>
{% endblock %}

