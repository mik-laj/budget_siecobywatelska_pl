{% extends 'base.html.twig' %}

{% block body %}
    <div class="pull-right">
        <a href="{{ path('contract_index') }}" class="btn btn-default" role="button" title="Back to the list">
            <span class="fa fa-list" aria-hidden="true"></span>
        </a>
        <a href="{{ path('contract_edit', { 'id': contract.id }) }}" class="btn btn-default" role="button" title="Edit">
            <span class="fa fa-pencil" aria-hidden="true"></span>
        </a>
        {{ form_start(delete_form, {'attr' : {'style': 'display: inline-block'} }) }}
            <button type="submit" title="Delete" class="btn btn-danger">
                <span class="fa fa-trash" aria-hidden="true"></span>
            </button>
        {{ form_end(delete_form) }}
    </div>
    <h1>Contract</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Category</th>
                <td>
                    {% if contract.category %}
                        <a href="{{ path('admin_category_show', { 'id': contract.category.id }) }}">{{ contract.category }}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Conclusionat</th>
                <td>{% if contract.conclusionAt %}{{ contract.conclusionAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Supplier</th>
                <td>{{ contract.supplier }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ contract.title }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ contract.value }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
